<Window x:Class="WpfAppPedidos.Views.PedidoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pedido" Height="450" Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Cliente:" Width="80"/>
            <TextBox x:Name="txtCliente" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Data:" Width="80"/>
            <DatePicker x:Name="dpData" Width="150" SelectedDate="{x:Static sys:DateTime.Now}" 
                        xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
        </StackPanel>

        <GroupBox Header="Itens" Grid.Row="2">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Produto:" Width="80"/>
                    <TextBox x:Name="txtProduto" Width="150"/>
                    <Label Content="Qtd:" Width="50" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtQuantidade" Width="50"/>
                    <Label Content="Preço:" Width="50" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtPreco" Width="80"/>
                    <Button Content="Adicionar" Width="80" Margin="10,0,0,0" Click="BtnAdicionar_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgItens" AutoGenerateColumns="False" Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Produto" Binding="{Binding Produto}" Width="*"/>
                        <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                        <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="100"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Label Content="Total Pedido:" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtTotalPedido" FontWeight="Bold" Width="100"/>
            <Button Content="Fechar" Width="80" Margin="10,0,0,0" Click="BtnFechar_Click"/>
        </StackPanel>
    </Grid>
</Window>