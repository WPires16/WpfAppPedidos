<Window x:Class="WpfAppPedidos.Views.PedidoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pedido" Height="500" Width="700">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" >
            <Label Content="Pessoa:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPessoa" IsReadOnly="True" Width="300" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ComboBox x:Name="cmbProdutos" Width="300" DisplayMemberPath="Nome" SelectedValuePath="Id" Height="50"/>
            <TextBox x:Name="txtQuantidade" Width="50" Margin="5,0,0,0" Text="1" Height="50"/>
            <Button Content="Adicionar Produto" Margin="5,0,0,0" Click="BtnAdicionarProduto_Click" Height="50"/>
        </StackPanel>

        <DataGrid x:Name="dgItensPedido" Grid.Row="2" AutoGenerateColumns="False" Height="250" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Produto" Binding="{Binding Produto.Nome}" Width="*"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                <DataGridTextColumn Header="Valor Unitário" Binding="{Binding Produto.Valor, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, Mode=OneWay}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Label Content="Valor Total:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="txtValorTotal" Width="120" IsReadOnly="True" Margin="5,0,0,0" Text="0,00"/>
            <Label Content="Forma Pagamento:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="cmbFormaPagamento" Width="150" Margin="5,0,0,0">
                <ComboBoxItem>Dinheiro</ComboBoxItem>
                <ComboBoxItem>Cartão</ComboBoxItem>
                <ComboBoxItem>Boleto</ComboBoxItem>
            </ComboBox>
            <Button Content="Finalizar Pedido" Margin="10,0,0,0" Click="BtnFinalizarPedido_Click"/>
        </StackPanel>
    </Grid>
</Window>