<Window x:Class="WpfAppPedidos.Views.PessoaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoas" Height="450" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" x:Name="txtFiltroNome"  TextChanged="Filtro_TextChanged"/>
            <TextBox Width="150" Margin="10,0,0,0" x:Name="txtFiltroCPF"  TextChanged="Filtro_TextChanged"/>
            
            
        </StackPanel>

        <DataGrid x:Name="dgPessoas" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="120"/>
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Aqui pode ser a área para edição / cadastro da pessoa -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBox Width="200" x:Name="txtNome" />
            <TextBox Width="150" Margin="10,0,0,0" x:Name="txtCPF" />
            <TextBox Width="200" Margin="10,0,0,0" x:Name="txtEndereco" />
            <Button Content="Novo" Margin="10,0,0,0" Click="BtnNovo_Click"/>
            <Button Content="Editar" Margin="5,0,0,0" Click="BtnEditar_Click" Background="#FFF7E697"/>
            <Button Content="Excluir" Margin="5,0,0,0" Click="BtnExcluir_Click" Background="#FFF79B9B"/>
            <Button Content="Salvar" Margin="5,0,0,0" Click="BtnSalvar_Click" Background="#FFACECAD"/>
        </StackPanel>

        <!-- Grid de Pedidos da pessoa -->
        <GroupBox Header="Pedidos da Pessoa" Grid.Row="3" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <CheckBox x:Name="chkPendentes" Content="Pendentes" Checked="FiltroPedidos_Checked" Unchecked="FiltroPedidos_Checked" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox x:Name="chkPagos" Content="Pagos" Checked="FiltroPedidos_Checked" Unchecked="FiltroPedidos_Checked" Margin="0,0,10,0"/>
                    <CheckBox x:Name="chkEntregues" Content="Entregues" Checked="FiltroPedidos_Checked" Unchecked="FiltroPedidos_Checked"/>
                    <Button x:Name="btnConsulta" Content="Consultar" Margin="150,0,0,0" Click="BtnbtnConsulta_Click"/>
                    <Button Content="Incluir Pedido" Margin="10,0,0,0" Click="BtnIncluirPedido_Click" Background="#FFACECAD"/>
                </StackPanel>

                <DataGrid x:Name="dgPedidos" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data Venda" Binding="{Binding DataVenda, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Forma Pagamento" Binding="{Binding FormaPagamento}" Width="120"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTemplateColumn Header="Ações" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Pago" Margin="2" Click="BtnMarcarPago_Click"/>
                                        <Button Content="Enviado" Margin="2" Click="BtnMarcarEnviado_Click"/>
                                        <Button Content="Recebido" Margin="2" Click="BtnMarcarRecebido_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>