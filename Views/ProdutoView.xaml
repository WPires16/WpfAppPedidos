<Window x:Class="WpfAppPedidos.Views.ProdutoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="..:: Produtos ::.." Height="800" Width="700">
    <Grid Margin="10,10,10,0" Height="740" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="481*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="Auto" MinHeight="29.96"/>
        </Grid.RowDefinitions>
        <Label Content="Consultar produtos" Grid.ColumnSpan="3"
            Grid.Row="0" Grid.Column="0" FontSize="25"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,28,0,0">
            <Label Width="200" Content="Nome:" Margin="0,0,0,0"/>
            <Label Width="150" Content="Codigo:" Margin="5,0,0,0"/>
            <Label Width="100" Content="Valor Mim:" Margin="10,0,0,0"/>
            <Label Width="100" Content="Valor Max:" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel  Grid.Row="2"  Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" x:Name="txtFiltroNome" TextChanged="Filtro_TextChanged"/>
            <TextBox Width="150" Margin="10,0,0,0" x:Name="txtFiltroCodigo"  TextChanged="Filtro_TextChanged"/>
            <TextBox Width="100" Margin="10,0,0,0" x:Name="txtFiltroValorMin"  TextChanged="Filtro_TextChanged"/>
            <TextBox Width="100" Margin="10,0,0,0" x:Name="txtFiltroValorMax"  TextChanged="Filtro_TextChanged"/>

        </StackPanel>

        <DataGrid x:Name="dgProdutos" Grid.Row="3" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Height="400" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
           
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="120"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Cadastrar produtos" Grid.ColumnSpan="3"
            Grid.Row="4" Grid.Column="0" FontSize="25" Margin="0,10,0,0"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,28,0,0">
            <Label Width="200" Content="Nome:" Margin="0,0,0,0"/>
            <Label Width="150" Content="Codigo:" Margin="5,0,0,0"/>
            <Label Width="100" Content="Valor:" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox Width="200" x:Name="txtNome"/>
            <TextBox Width="150" Margin="10,0,0,0" x:Name="txtCodigo" Tag="Digite o Codigo(placeholder)"/>
            <TextBox Width="100" Margin="10,0,0,0" x:Name="txtValor" Tag="Digite o Valor(placeholder)"/>
            <Button Content="Novo" Margin="10,0,0,0" Click="BtnNovo_Click"/>
            <Button Content="Editar" Margin="5,0,0,0" Click="BtnEditar_Click" Background="#FFF7E697"/>
            <Button Content="Excluir" Margin="5,0,0,0" Click="BtnExcluir_Click" Background="#FFF79B9B"/>
            <Button Content="Salvar" Margin="5,0,0,0" Click="BtnSalvar_Click" Background="#FFACECAD"/>
        </StackPanel>

    </Grid>
</Window>