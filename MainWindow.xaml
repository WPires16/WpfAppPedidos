<Window x:Class="WpfAppPedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Cadastro" Height="300" Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
        <Button Content="Cadastro de Pessoas" Width="200" Height="40" Margin="10" Click="BtnPessoas_Click"/>
        <Button Content="Cadastro de Produtos" Width="200" Height="40" Margin="10" Click="BtnProdutos_Click"/>
        <Button Content="Cadastro de Pedidos" Width="200" Height="40" Margin="10" Click="BtnPedidos_Click"/>
    </StackPanel>
</Window>